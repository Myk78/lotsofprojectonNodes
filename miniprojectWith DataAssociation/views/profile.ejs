<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="flex justify-end">
        <a
          href="/logout"
          class="bg-red-500 px-3 py-2 rounded-md inline-block text-sm mb-5"
          >Logout</a
        >
      </div>
      <div class="flex gap-3 mb-3">
        <div class="w-10 h-10 rounded-md overflow-hidden">
          <a href="/profilepic"
            ><img
              class="w-full h-full object-cover"
              src="/images/uploads/<%= user.profilepic %>"
              alt=""
          /></a>
        </div>
        <h3 class="text-3xl">
          <span class="font-light">Hello,</span><%= user.name %>
        </h3>
      </div>

      <h5 class="mb-5">You can Create a Post</h5>
      <form method="post" action="/createPost">
        <textarea
          placeholder="What's you post Today"
          class="block resize-none bg-transparent border-2 border-zinc-800 rounded-md outline-none"
          action="/createPost"
          name="content"
          id=""
        ></textarea>
        <input
          type="submit"
          value="Post"
          class="bg-blue-500 px-4 py-2 rounded-md mt-2"
        />
      </form>
      <div class="post mt-20">
        <h3 class="text-zinc-400">Your Posts.</h3>
        <div class="postcontainer">
          <% user.post.reverse().forEach(function(val){ %>
          <div
            class="post w-1/3 border-2 border-zinc-800 bg-zinc-700 rounded-md"
          >
            <div class="inline-block flex flex-wrap justify-between">
              <h4 class="text-zinc-400 my-2">@<%= user.username %></h4>
              <a
                href="/delete/<%= val.id %>"
                class="text-yellow-500 flex justify-end"
                >Delete</a
              >
            </div>

            <div class="text-sm tracking-tighter px-4">
              <p class="text-md"><%= val.content %></p>
              <small><%= val.likes.length %> likes</small>
            </div>

            <div class="btns flex mt-5 gap-4 px-4">
              <a href="/like/<%= val.id %>" class="text-yellow-500 like"
                ><%= val.likes.indexOf(user.id) === -1 ? "like" : "unlike" %>
              </a>
              <a href="/edit/<%= val.id %>" class="text-zinc-400">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
  <script>
    document.querySelector("like").addEventListener();
  </script>
</html>
